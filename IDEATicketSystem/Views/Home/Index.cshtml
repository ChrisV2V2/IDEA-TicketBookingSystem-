@model List<IDEATicketSystem.Models.EmailReceived>
<h2>Recent Support Emails</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Sender</th>
                <th>Subject</th>
                <th>Received</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var email in Model)
            {
                <tr>
                    <td>@email.Sender</td>
                    <td>@email.Subject</td>
                    <td>@email.EmailReceivedTimeStamped</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No emails found.</p>
}
